{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "patroni01-pgdata",
        "labels": {
            "application": "patroni",
            "cleanup": "$CCP_NAMESPACE-patroni"
        }
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "name": "$CCP_NAMESPACE-patroni01-pgdata"
            }
        },
        "accessModes": [
            "$CCP_STORAGE_MODE"
        ],
        "resources": {
            "requests": {
                "storage": "$CCP_STORAGE_CAPACITY"
            }
        }
    }
}

