{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "patroni-master",
        "labels": {
            "application": "patroni",
            "name": "patroni",
            "cleanup": "$CCP_NAMESPACE-patroni"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }
        ],
        "selector": {
            "role": "master"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "patroni-replica",
        "labels": {
            "application": "patroni",
            "name": "patroni",
            "cleanup": "$CCP_NAMESPACE-patroni"
        }
    },
    "spec": {
        "ports": [
            {
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }
        ],
        "selector": {
            "role": "replica"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}

{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "patroni01",
        "labels": {
            "application": "patroni",
            "name": "patroni01",
            "cleanup": "$CCP_NAMESPACE-patroni"
        }
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "application": "patroni",
                    "name": "patroni01",
                    "cleanup": "$CCP_NAMESPACE-patroni",
                    "cluster-name": "patroni-example"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "postgres",
                        "image": "$CCP_IMAGE_PREFIX/crunchy-postgres:$CCP_IMAGE_TAG",
                        "readinessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/readiness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 1
                        },
                        "livenessProbe": {
                            "exec": {
                                "command": [
                                    "/opt/cpm/bin/liveness.sh"
                                ]
                            },
                            "initialDelaySeconds": 40,
                            "timeoutSeconds": 1
                        },
                        "env": [
                            {
                                "name": "PATRONI",
                                "value": "true"
                            },
                            {
                                "name": "POD_IP",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "status.podIP"
                                    }
                                }
                            },
                            {
                                "name": "PATRONI_NAME",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.name"
                                    }
                                }
                            },
                            {
                                "name": "PATRONI_SCOPE",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.labels['cluster-name']"
                                    }
                                }
                            },
                            {
                                "name": "PATRONI_RESTAPI_LISTEN",
                                "value": "0.0.0.0:8008"
                            },
                            {
                                "name": "PATRONI_RESTAPI_CONNECT_ADDRESS",
                                "value": "$(POD_IP):8008"
                            },
                            {
                                "name": "PATRONI_KUBERNETES_NAMESPACE",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.namespace"
                                    }
                                }
                            },
                            {
                                "name": "PATRONI_KUBERNETES_LABELS",
                                "value": "{cleanup: \"$CCP_NAMESPACE-patroni\"}"
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "5432"
                            },
                            {
                                "name": "PATRONI_POSTGRESQL_LISTEN",
                                "value": "0.0.0.0:$(PG_PRIMARY_PORT)"
                            },
                            {
                                "name": "PATRONI_POSTGRESQL_CONNECT_ADDRESS",
                                "value": "$(POD_IP):$(PG_PRIMARY_PORT)"
                            },
                            {
                                "name": "PATRONI_POSTGRESQL_DATA_DIR",
                                "value": "/pgdata/patroni-$(PATRONI_NAME)"
                            },
                            {
                                "name": "PATRONI_REPLICATION_USERNAME",
                                "value": "replicator"
                            },
                            {
                                "name": "PATRONI_REPLICATION_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PATRONI_SUPERUSER_USERNAME",
                                "value": "postgres"
                            },
                            {
                                "name": "PATRONI_SUPERUSER_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PATRONI_testuser_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PATRONI_testuser_OPTIONS",
                                "value": "login"
                            },
                            {
                                "name": "PG_USER",
                                "value": "testuser"
                            },
                            {
                                "name": "PATRONI_NAMESPACE",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.namespace"
                                    }
                                }
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            }
                        ],
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            },
                            {
                                "containerPort": 8008,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "imagePullPolicy": "IfNotPresent"
                    }
                ],
                "volumes": [
                    {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "patroni01-pgdata"
                        }
                    }
                ],
                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst",
                "securityContext": {
                    $CCP_SECURITY_CONTEXT
                }
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}

